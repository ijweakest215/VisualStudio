<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YPANTO_Midterm.Views.NewNote">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0">
                    <Entry x:Name="id" Placeholder="id"/>
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Entry x:Name="note" Placeholder="note"/>
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Button Text="Post Note" Clicked="Button_Clicked"/>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>