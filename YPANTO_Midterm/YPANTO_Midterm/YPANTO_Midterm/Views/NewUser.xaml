<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YPANTO_Midterm.Views.NewUser">
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <StackLayout Grid.Row="0">
                    <Entry x:Name="firstname" Placeholder="firstname"/>
                </StackLayout>
                <StackLayout Grid.Row="1">
                    <Entry x:Name="lastname" Placeholder="lastname"/>
                </StackLayout>
                <StackLayout Grid.Row="2">
                    <Button Text="Sign Up" Clicked="NewUserClicked"/>
                </StackLayout>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>